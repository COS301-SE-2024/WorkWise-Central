    "mongo-gridfs": "github:khoapmd/mongo-gridfs",
    "multer-gridfs-storage": "^5.0.2",
    "nodemailer": "^6.9.13",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.7",
    "rxjs": "^7.8.1",
    "superagent": "^9.0.2",
    "swagger-themes": "^1.4.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
