{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
  ],
  "compilerOptions": {
    "target": "ES6",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "module": "NodeNext",
    "paths": {
      "@/*": [
        "./src/*" // set path `@/*` as alias of `src/*`
      ]
    },
    "allowJs": true,
    "noImplicitAny": false,
  }
}
